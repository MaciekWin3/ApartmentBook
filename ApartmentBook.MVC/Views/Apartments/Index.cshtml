@model IEnumerable<ApartmentBook.MVC.Features.Apartments.Models.Apartment>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Apartments</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
</div>

<div class="row">
    @foreach(var apartment in Model)
    {
    <div class="col-xl-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="ms-3">
                            <p class="fw-bold mb-1">@apartment.Name</p>
                            <p class="text-muted mb-0">Addres: @apartment.City, @apartment.Street @apartment.Building/@apartment.Flat</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer border-0 bg-light p-2 d-flex justify-content-around">
            <a
                asp-action="Details" asp-route-id="@apartment.Id"
                class="btn btn-link m-0 text-reset"
                role="button"
                data-ripple-color="primary"
                >Info<i class="fas fa-circle-info ms-2"></i>
            </a>
            <a
                asp-action="Edit" asp-route-id="@apartment.Id"
                class="btn btn-link m-0 text-reset"
                role="button"
                data-ripple-color="primary"
                >Edit<i class="fas fa-pen-to-square ms-2"></i>
            </a>
            <a
                asp-action="Delete" asp-route-id="@apartment.Id"
                class="btn btn-link m-0 text-reset"
                role="button"
                data-ripple-color="primary"
                >Delete<i class="fas fa-trash-can ms-2"></i>
            </a>
            </div>
        </div>
    </div>
    }
</div>
<p id="apartmentId" hidden></p>

<script>

</script>

