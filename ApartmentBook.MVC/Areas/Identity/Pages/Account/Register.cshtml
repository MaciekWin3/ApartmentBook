@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center mt-6">
    <form id="registerForm" style="max-width:280px;margin:auto;" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <img class="mt-4 mb-4" src="~/images/small_town.svg" height="92" alt="Logo" />
        <h1 class="h3 mb-3 fw-normal">Register</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating m-2">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating m-2">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating m-2">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.ConfirmPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="mt-3 d-grid gap-2">
            <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary block m-2">Register</button>
        </div>
        <p>
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account? Log in!</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
